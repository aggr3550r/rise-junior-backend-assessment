{
  "name": "rise-junior-backend-assessment",
  "version": "1.0.0",
  "description": "This repository houses code built in partial fulfilment of the interview process for a junior backend engineer role at RiseVest",
  "main": "dist/index.js",
  "scripts": {
    "start": "cross-env NODE_ENV=development ts-node --files src",
    "build": "tsc",
    "start:dev": "npm run build && cross-env NODE_ENV=development nodemon dist",
    "test": "jest --detectOpenHandles",
    "test:watch": "jest --watch",
    "test:cov": "jest --coverage",
    "test:debug": "node --inspect-brk -r tsconfig-paths/register -r ts-node/register node_modules/.bin/jest --runInBand",
    "test:e2e": "jest --config ./test/jest-e2e.json"
  },
  "pretest": "",
  "pretest:coverage": "",
  "keywords": [],
  "author": "Victor Uche",
  "license": "ISC",
  "dependencies": {
    "@jest/types": "^29.6.3",
    "@sentry/tracing": "^7.64.0",
    "@types/cors": "^2.8.13",
    "@types/express": "^4.17.17",
    "@types/morgan": "^1.9.5",
    "@types/multer": "^1.4.7",
    "@types/node": "^20.5.4",
    "@types/supertest": "^2.0.12",
    "@types/winston": "^2.4.4",
    "aws-sdk": "^2.1444.0",
    "axios": "^1.4.0",
    "bcryptjs": "^2.4.3",
    "body-parser": "^1.20.2",
    "class-transformer": "^0.5.1",
    "class-validator": "^0.14.0",
    "cors": "^2.8.5",
    "dotenv": "^16.3.1",
    "express": "^4.18.2",
    "express-rate-limit": "^6.9.0",
    "ffmpeg": "^0.0.4",
    "fluent-ffmpeg": "^2.1.2",
    "helmet": "^7.0.0",
    "jest": "^29.6.4",
    "jsonwebtoken": "^9.0.1",
    "morgan": "^1.10.0",
    "multer": "^1.4.5-lts.1",
    "pg": "^8.11.3",
    "randomstring": "^1.3.0",
    "reflect-metadata": "^0.1.13",
    "sharp": "^0.32.5",
    "supertest": "^6.3.3",
    "ts-node": "^10.9.1",
    "tslint": "^6.1.3",
    "typeorm": "^0.3.17",
    "typescript": "^5.1.6",
    "uuid": "^9.0.0",
    "winston": "^3.10.0"
  },
  "devDependencies": {
    "@babel/core": "^7.22.11",
    "@babel/preset-env": "^7.22.10",
    "@babel/preset-modules": "^0.1.6",
    "@types/fluent-ffmpeg": "^2.1.21",
    "@types/jest": "^29.5.4",
    "@types/jsonwebtoken": "^9.0.2",
    "@types/uuid": "^9.0.2",
    "babel-jest": "^29.6.4",
    "cross-env": "^7.0.3",
    "jest-environment-jsdom": "^29.6.4",
    "nodemon": "^3.0.1",
    "ts-jest": "^29.1.1"
  },
  "jest": {
    "moduleFileExtensions": [
      "js",
      "json",
      "ts"
    ],
    "rootDir": "src",
    "testMatch": [
      "**/__tests__/**/*.js",
      "**/?(*.)+(spec|test).(t|j)s"
    ],
    "transform": {
      "^.+\\.(t|j)s$": "ts-jest"
    },
    "collectCoverageFrom": [
      "**/*.(t|j)s"
    ],
    "coverageDirectory": "../coverage",
    "testEnvironment": "jest-environment-jsdom"
  }
}
